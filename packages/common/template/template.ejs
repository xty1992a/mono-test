<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=no">
    <%# scripts中纯链接及指定head的放头部 %>
    <%# scripts指定body的放底部 %>
    <% const options = htmlWebpackPlugin.options %>
    <% const headScript = options.scripts.filter(it => typeof it === 'string' || it.head) %>
    <% const bodyScript = options.scripts.filter(it => it.body && it.link) %>
    <title><%= options.title %></title>

    <% headScript.forEach(script => { %>
        <script src="<%= script.hasOwnProperty('link') ? script.link : script %>"></script>
    <% }) %>

    <% for (let i = 0; i < options.styles.length; i++) { %>
        <link rel="stylesheet" href="<%= options.styles[i] %>"/>
    <% } %>
</head>
<body>
<div id="app"></div>

<% bodyScript.forEach(script => { %>
    <script src="<%= script.link %>"></script>
<% }) %>
</body>
</html>
